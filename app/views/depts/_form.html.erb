<h1><%= @dept.id ? 'Edit Department' : 'Create Department' %></h1>
<hr />
<%= form_for @dept do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <%= f.label :aisle %>
  <%= f.text_field :aisle, required: true, autofocus: true %>
  <%= f.label :description %>
  <%= f.text_field :description, required: true, autofocus: true %>
  <%= f.submit %>
<% end %>